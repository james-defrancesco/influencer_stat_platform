<p id="notice"><%= notice %></p>

<h1 class="title">INFLUENCERS</h1>

<table class="table is-striped">
  <thead>
    <tr>
      <th>Full name</th>
      <!-- <th>Facebook</th> -->
      <th style="text-align: right !important;">Instagram</th>
      <th style="text-align: right !important;">Twitter</th>
      <th style="text-align: right !important;">Youtube</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @influencers.each do |influencer| %>
      <tr>
        <td><%= influencer.full_name %></td>
        <!-- <td class="align-right"><%#= number_with_delimiter(Influencer.get_facebook_numbers(influencer.facebook), :delimiter => ',') %></td> -->
        <td class="align-right"><%= number_with_delimiter(Influencer.get_instagram_numbers(influencer.instagram), :delimiter => ',')  %></td>
        <td class="align-right"><%= number_with_delimiter(Influencer.get_twitter_numbers(influencer.twitter), :delimiter => ',')  %></td>
        <td class="align-right"><%= number_with_delimiter(Influencer.get_youtube_numbers(influencer.youtube), :delimiter => ',') %></td>
        <td><%= link_to 'Show', influencer %></td>
        <td><%= link_to 'Edit', edit_influencer_path(influencer) %></td>
        <td><%= link_to 'Destroy', influencer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Influencer', new_influencer_path %>
